# Python Environment
PYTHON_ENV=development
ENV=development

# Firebase Admin Configuration (Optional - auth verification will be disabled if not provided)
# Service Account credentials from Firebase Console
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# AI/ML API Keys (Optional - respective features will be disabled if not provided)
# Google Gemini API - Required for chat functionality
GEMINI_API_KEY=your_gemini_api_key

# Nano Banana API - Required for image generation
NANO_BANANA_API_KEY=your_nano_banana_api_key

# Veo API - Required for video generation
VEO_API_KEY=your_veo_api_key

# Tavily API - Required for web search/grounding
TAVILY_API_KEY=your_tavily_api_key

# Frontend Origin for CORS
FRONTEND_ORIGIN=http://localhost:3000

# Rate Limiting
TAVILY_MAX_QUERIES_PER_HOUR=20
IMAGE_RATE_LIMIT_PER_HOUR=5
VIDEO_RATE_LIMIT_PER_HOUR=2

# Media Storage
MAX_ATTACHMENT_SIZE_BYTES=10485760
STREAM_UPDATE_INTERVAL_MS=500
MEDIA_RETENTION_DAYS=30
